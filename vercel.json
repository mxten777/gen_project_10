{
  "version": 2,
  "public": true,
  "functions": {
    "public/**/*.html": {
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  },
  "headers": [
    {
      "source": "/public/(.*)\\.html$",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/public/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/public/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/invitation",
      "destination": "/public/invitation.html"
    },
    {
      "source": "/clean",
      "destination": "/public/invitation_clean.html"
    },
    {
      "source": "/simple", 
      "destination": "/public/invitation_simple.html"
    },
    {
      "source": "/checkin",
      "destination": "/public/checkin.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin.html"
    },
    {
      "source": "/debug",
      "destination": "/public/debug.html"
    }
  ],
  "redirects": [
    {
      "source": "/invitation.html",
      "destination": "/invitation",
      "permanent": true
    },
    {
      "source": "/checkin.html", 
      "destination": "/checkin",
      "permanent": true
    },
    {
      "source": "/admin.html",
      "destination": "/admin", 
      "permanent": true
    }
  ]
}